<div class="container mt-4">
  <%= form_for(@flat) do |f| %>
      <div class="form-inputs mb-3">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-inputs mb-3">
        <%= f.label :address, class: "form-label" %>
        <%= f.text_field :address, class: 'form-control' %>
      </div>

      <div class="form-inputs mb-3">
        <%= f.label :description, class: "form-label" %>
        <%= f.text_field :description, class: 'form-control' %>
      </div>

      <div class="form-inputs mb-3">
        <%= f.label :number_of_guests, class: "form-label" %>
        <%= f.text_field :number_of_guests, class: 'form-control' %>
      </div>

      <div class="form-inputs mb-3">
        <%= f.label :price_per_night, class: "form-label" %>
        <%= f.text_field :price_per_night, class: 'form-control' %>
      </div>


      <div class="form-actions">
        <%= f.submit class: "btn btn-secondary mb-3" %> <%= link_to 'Cancel', flats_path, class:"btn btn-dark mb-3" %>
      </div>
    <% end %>
</div>
