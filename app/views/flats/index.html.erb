<div class="container mt-3">

  <div class="row">
    <div class="col-12">
      <h1>All our Flats</h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
        <p>All <%= @flats.count %> flats.</p>
    </div>
  </div>

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% @flats.each do |flat| %>
    <div class="col">
      <div class="card h-100">
        <div class="card-body">
          <h4 class="card-title"><%= flat.name %></h4>
          <h6 class="card-subtitle mb-2 text-muted"><%= flat.address %></h4>
          <p class="card-text"><%= flat.description %></p>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <div>
              <i class="fas fa-users"></i> <%= flat.number_of_guests %>
            </div>
            <div>
              <i class="fas fa-money-bill-alt"></i> <%= flat.price_per_night %>.00
            </div>
        </div>
          <%= link_to 'Details', flat_path(flat.id), class: "btn btn-light mt-2" %>
          <%= link_to "Edit", edit_flat_path(flat.id), class: "btn btn-secondary mb-2 mt-2" %>
          <%= link_to "Delete", flat_path(flat.id), class: "btn btn-dark", method: :delete, data: { confirm: 'Are you sure you want to delete this flat?' } %>
      </div>
    </div>
    <% end %>
  </div>
</div>
